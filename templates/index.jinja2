<script type="text/javascript">
var taglines = ["that he's a CIA experiment gone wrong, and that he only eats cheese...",
                "that his heart ticks like a watch, and that he's confused by stairs...",
                "that he knows 2 facts about ducks, and both of them are wrong..."
                ];
function randInt(min, max) {
    return Math.floor(Math.random() * (max - min + 1)) + min;
};
window.onload = function () {
    var tagline_element = document.getElementById("tagline");
    var tagline = taglines[randInt(0, taglines.length - 1)];
    tagline_element.innerHTML = tagline;
};
</script>
